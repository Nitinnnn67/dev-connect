# Server Configuration
PORT=5000
NODE_ENV=production
BASE_URL=https://your-app-name.onrender.com

# Database Configuration (REQUIRED)
MONGO_DB_ATLAS=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/dev-connect

# Session Configuration (REQUIRED - use a strong random string)
SESSION_SECRET=change-this-to-a-long-random-string-in-production

# OAuth - GitHub (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth - Google (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (if using nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

# AI Configuration (if using)
GOOGLE_AI_API_KEY=your-google-ai-api-key
