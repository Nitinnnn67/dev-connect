<% layout("/layout/boilerplate") %>

<link rel="stylesheet" href="/css/login.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<div class="login-wrapper">
    <div class="login-container">
        <!-- Decorative Elements -->
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
        
        <div class="login-card">
            <!-- Left Side: Brand Section -->
            <div class="brand-section">
                <div class="brand-icon">
                    <i class="fas fa-code-branch"></i>
                </div>
                <h2 class="brand-name">DevConnect</h2>
            </div>

            <!-- Right Side: Form Content -->
            <div class="login-card-content">
                <!-- Header -->
                <div class="login-header">
                    <h1>Welcome Back</h1>
                    <p>Sign in to continue to your account</p>
                </div>

                <!-- Form -->
                <form action="/login" method="POST" id="loginForm" class="login-form">
                    <!-- Email or Username Field -->
                    <div class="input-group">
                        <label for="username" class="input-label">
                            <i class="fas fa-user"></i>
                            <span>Email or Username</span>
                        </label>
                        <div class="input-wrapper">
                            <input 
                                type="text" 
                                class="form-input" 
                                id="username" 
                                name="username" 
                                placeholder="Enter your email or username"
                                required
                            >
                        </div>
                    </div>

                    <!-- Password Field -->
                    <div class="input-group">
                        <label for="password" class="input-label">
                            <i class="fas fa-lock"></i>
                            <span>Password</span>
                        </label>
                        <div class="input-wrapper password-wrapper">
                            <input 
                                type="password" 
                                class="form-input" 
                                id="password" 
                                name="password" 
                                placeholder="Enter your password"
                                required
                            >
                            <button type="button" class="password-toggle" id="togglePassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="form-options">
                        <label class="remember-checkbox">
                            <input type="checkbox" name="remember" id="remember">
                            <span>Remember me</span>
                        </label>
                        <a href="/forgot-password" class="forgot-link">Forgot password?</a>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn-login">
                        <span class="btn-text">Sign In</span>
                        <span class="btn-icon">
                            <i class="fas fa-arrow-right"></i>
                        </span>
                    </button>
                </form>

                <!-- Divider -->
                <div class="divider">
                    <span>or</span>
                </div>

                <!-- Social Login -->
                <div class="social-login">
                    <a href="/auth/github" class="social-btn github-btn">
                        <i class="fab fa-github"></i>
                        <span>GitHub</span>
                    </a>
                    <a href="/auth/google" class="social-btn google-btn">
                        <i class="fab fa-google"></i>
                        <span>Google</span>
                    </a>
                </div>

                <!-- Footer Link -->
                <div class="form-footer">
                    <p>Don't have an account? <a href="/register" class="register-link">Sign up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- GSAP Animation Library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>

<!-- Login Page Scripts -->
<script src="/js/login.js"></script>
<script src="/animations/login-animat.js"></script>
