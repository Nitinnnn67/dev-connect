                <div class="project-meta">
                    <div class="meta-item">
                        <i class="fas fa-users"></i>
                        <span>3/5 Members</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-calendar"></i>
                        <span>3 months</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-star"></i>
                        <span>24</span>
