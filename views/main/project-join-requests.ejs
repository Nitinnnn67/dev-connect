<% layout('layout/boilerplate') -%>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">Join Requests</h2>
                    <p class="text-muted">
                        <a href="/projects/<%= project._id %>" class="text-decoration-none"><%= project.title %></a>
                    </p>
                </div>
                <a href="/projects/<%= project._id %>" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Project
                </a>
            </div>

            <!-- Join Requests List -->
            <% if (joinRequests.length === 0) { %>
                <div class="card text-center py-5">
                    <div class="card-body">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h5>No Pending Join Requests</h5>
                        <p class="text-muted">There are currently no pending join requests for this project.</p>
                    </div>
                </div>
            <% } else { %>
                <div class="list-group">
                    <% joinRequests.forEach(request => { %>
                        <div class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col-md-7">
                                    <h5 class="mb-1">
                                        <a href="/users/<%= request.user.username %>" class="text-decoration-none">
                                            <%= request.user.name || request.user.username %>
                                        </a>
                                    </h5>
                                    <p class="mb-2 text-muted">@<%= request.user.username %> â€¢ <%= request.user.email %></p>
                                    
                                    <% if (request.user.skills && request.user.skills.length > 0) { %>
                                        <div class="mb-2">
                                            <strong>Skills:</strong>
                                            <% request.user.skills.slice(0, 5).forEach(skill => { %>
                                                <span class="badge bg-info text-dark me-1"><%= skill %></span>
                                            <% }) %>
                                        </div>
                                    <% } %>
                                    
                                    <% if (request.message) { %>
                                        <div class="alert alert-light mb-0 mt-2">
                                            <strong>Message:</strong> <%= request.message %>
                                        </div>
                                    <% } %>
                                    
                                    <small class="text-muted">
                                        Requested <%= new Date(request.requestedAt).toLocaleDateString() %>
                                    </small>
                                </div>
                                <div class="col-md-5 text-md-end mt-3 mt-md-0">
                                    <form action="/projects/<%= project._id %>/join-requests/<%= request._id %>/approve" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-success me-2">
                                            <i class="fas fa-check me-1"></i>Approve
                                        </button>
                                    </form>
                                    <form action="/projects/<%= project._id %>/join-requests/<%= request._id %>/reject" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fas fa-times me-1"></i>Reject
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>
</div>
