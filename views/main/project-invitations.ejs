<% layout('layout/boilerplate') -%>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="mb-4">
                <h2 class="mb-1">Project Invitations</h2>
                <p class="text-muted">You have <%= invitations.length %> pending invitation(s)</p>
            </div>

            <!-- Invitations List -->
            <% if (invitations.length === 0) { %>
                <div class="card text-center py-5">
                    <div class="card-body">
                        <i class="fas fa-envelope-open fa-3x text-muted mb-3"></i>
                        <h5>No Pending Invitations</h5>
                        <p class="text-muted">You don't have any pending project invitations at the moment.</p>
                        <a href="/projects" class="btn btn-primary mt-3">Browse Projects</a>
                    </div>
                </div>
            <% } else { %>
                <div class="row">
                    <% invitations.forEach(item => { %>
                        <div class="col-md-12 mb-3">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h4 class="card-title mb-2">
                                                <a href="/projects/<%= item.project._id %>" class="text-decoration-none">
                                                    <%= item.project.title %>
                                                </a>
                                            </h4>
                                            <p class="text-muted mb-3">
                                                By <strong><%= item.project.createdBy.name || item.project.createdBy.username %></strong>
                                            </p>
                                            
                                            <p class="card-text"><%= item.project.description.substring(0, 200) %><%= item.project.description.length > 200 ? '...' : '' %></p>
                                            
                                            <% if (item.project.requiredSkills && item.project.requiredSkills.length > 0) { %>
                                                <div class="mb-3">
                                                    <strong>Required Skills:</strong><br>
                                                    <% item.project.requiredSkills.slice(0, 5).forEach(skill => { %>
                                                        <span class="badge bg-primary me-1"><%= skill %></span>
                                                    <% }) %>
                                                </div>
                                            <% } %>
                                            
                                            <% if (item.invitation.message) { %>
                                                <div class="alert alert-info mb-0">
                                                    <strong>Invitation Message:</strong><br>
                                                    <%= item.invitation.message %>
                                                </div>
                                            <% } %>
                                            
                                            <small class="text-muted d-block mt-2">
                                                Invited by <strong><%= item.invitation.invitedBy.name || item.invitation.invitedBy.username %></strong> 
                                                on <%= new Date(item.invitation.invitedAt).toLocaleDateString() %>
                                            </small>
                                        </div>
                                        <div class="col-md-4 d-flex flex-column justify-content-center align-items-end">
                                            <form action="/projects/<%= item.project._id %>/invitations/<%= item.invitation._id %>/accept" method="POST" class="mb-2 w-100">
                                                <button type="submit" class="btn btn-success w-100">
                                                    <i class="fas fa-check me-2"></i>Accept Invitation
                                                </button>
                                            </form>
                                            <form action="/projects/<%= item.project._id %>/invitations/<%= item.invitation._id %>/decline" method="POST" class="w-100">
                                                <button type="submit" class="btn btn-outline-danger w-100">
                                                    <i class="fas fa-times me-2"></i>Decline
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>
</div>
