<% layout("/layout/boilerplate") %>

<link rel="stylesheet" href="/css/notifications.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<!-- Notifications Container -->
<div class="notifications-container">
    <!-- Notifications Header -->
    <section class="notifications-header">
        <div class="header-content">
            <h1>Notifications</h1>
            <p class="header-subtitle">Stay updated with your project activity</p>
        </div>
    </section>

    <!-- Notifications Content -->
    <div class="notifications-content">
        <!-- Coming Soon Message -->
        <div class="coming-soon-state">
            <div class="coming-soon-icon">
                <i class="fas fa-bell"></i>
            </div>
            <h2>Notifications Coming Soon!</h2>
            <p>We're building a comprehensive notification system to keep you updated on:</p>
            <ul class="features-list">
                <li><i class="fas fa-check-circle"></i> Project invitations and team updates</li>
                <li><i class="fas fa-check-circle"></i> Task assignments and completions</li>
                <li><i class="fas fa-check-circle"></i> Comments and mentions</li>
                <li><i class="fas fa-check-circle"></i> System announcements</li>
            </ul>
            <p class="coming-soon-note">In the meantime, check your <a href="/home">dashboard</a> for recent activity.</p>
            <div class="quick-links">
                <a href="/home" class="btn btn-primary">
                    <i class="fas fa-home"></i>
                    Go to Dashboard
                </a>
                <a href="/projects" class="btn btn-secondary">
                    <i class="fas fa-folder"></i>
                    Browse Projects
                </a>
            </div>
        </div>
    </div>
</div>

<!-- GSAP Animation Library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>

<script>
// GSAP Animations
gsap.fromTo('.notifications-header',
    { opacity: 0, y: -30 },
    { opacity: 1, y: 0, duration: 0.6, ease: 'power3.out' }
);

gsap.fromTo('.coming-soon-state',
    { opacity: 0, scale: 0.95 },
    { opacity: 1, scale: 1, duration: 0.6, delay: 0.3, ease: 'back.out(1.2)' }
);
</script>
