<% layout("/layout/boilerplate") %>

<link rel="stylesheet" href="/css/notifications.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<!-- Notifications Container -->
<div class="notifications-container">
    <!-- Notifications Header -->
    <section class="notifications-header">
        <div class="header-content">
            <h1>Notifications</h1>
            <div class="header-actions">
                <button class="btn btn-secondary" id="markAllReadBtn">
                    <i class="fas fa-check-double"></i>
                    Mark All as Read
                </button>
                <button class="btn btn-secondary" id="clearAllBtn">
                    <i class="fas fa-trash"></i>
                    Clear All
                </button>
            </div>
        </div>
    </section>

    <!-- Notifications Content -->
    <div class="notifications-content">
        <!-- Filters -->
        <div class="notifications-filters">
            <button class="filter-btn active" data-filter="all">
                <i class="fas fa-inbox"></i>
                All
                <span class="count">8</span>
            </button>
            <button class="filter-btn" data-filter="unread">
                <i class="fas fa-envelope"></i>
                Unread
                <span class="count">5</span>
            </button>
            <button class="filter-btn" data-filter="projects">
                <i class="fas fa-folder"></i>
                Projects
                <span class="count">3</span>
            </button>
            <button class="filter-btn" data-filter="team">
                <i class="fas fa-users"></i>
                Team
                <span class="count">2</span>
            </button>
            <button class="filter-btn" data-filter="system">
                <i class="fas fa-bell"></i>
                System
                <span class="count">3</span>
            </button>
        </div>

        <!-- Notifications List -->
        <div class="notifications-list">
            <!-- Unread Notification -->
            <div class="notification-item unread" data-type="projects">
                <div class="notification-icon" style="background: #17a2b8;">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div class="notification-content">
                    <h4>New Team Member</h4>
                    <p><strong>Emily Brown</strong> joined your project "<strong>DevConnect Platform</strong>"</p>
                    <span class="notification-time">5 minutes ago</span>
                </div>
                <div class="notification-actions">
                    <button class="action-btn" title="Mark as read">
                        <i class="fas fa-check"></i>
                    </button>
                    <button class="action-btn" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Unread Notification -->
            <div class="notification-item unread" data-type="team">
                <div class="notification-icon" style="background: #28a745;">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="notification-content">
                    <h4>Task Completed</h4>
                    <p><strong>Mike Johnson</strong> completed the task "<strong>Set up project repository</strong>"</p>
                    <span class="notification-time">2 hours ago</span>
                </div>
                <div class="notification-actions">
                    <button class="action-btn" title="Mark as read">
                        <i class="fas fa-check"></i>
                    </button>
                    <button class="action-btn" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Unread Notification -->
            <div class="notification-item unread" data-type="projects">
                <div class="notification-icon" style="background: #ffc107;">
                    <i class="fas fa-comment"></i>
                </div>
                <div class="notification-content">
                    <h4>New Comment</h4>
                    <p><strong>Sarah Smith</strong> commented on your project: "Great progress! Love the new design."</p>
                    <span class="notification-time">3 hours ago</span>
                </div>
                <div class="notification-actions">
                    <button class="action-btn" title="Mark as read">
                        <i class="fas fa-check"></i>
                    </button>
                    <button class="action-btn" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Unread Notification -->
            <div class="notification-item unread" data-type="system">
                <div class="notification-icon" style="background: #dc3545;">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="notification-content">
                    <h4>Task Overdue</h4>
                    <p>The task "<strong>Write API documentation</strong>" is overdue by 3 days</p>
                    <span class="notification-time">5 hours ago</span>
                </div>
                <div class="notification-actions">
                    <button class="action-btn" title="Mark as read">
                        <i class="fas fa-check"></i>
                    </button>
                    <button class="action-btn" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Unread Notification -->
            <div class="notification-item unread" data-type="team">
                <div class="notification-icon" style="background: #6f42c1;">
                    <i class="fas fa-star"></i>
                </div>
                <div class="notification-content">
                    <h4>Project Starred</h4>
                    <p><strong>Alex Wilson</strong> starred your project "<strong>AI Content Generator</strong>"</p>
                    <span class="notification-time">1 day ago</span>
                </div>
                <div class="notification-actions">
                    <button class="action-btn" title="Mark as read">
                        <i class="fas fa-check"></i>
                    </button>
                    <button class="action-btn" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Read Notification -->
            <div class="notification-item" data-type="projects">
                <div class="notification-icon" style="background: #17a2b8;">
                    <i class="fas fa-code-branch"></i>
                </div>
                <div class="notification-content">
                    <h4>Milestone Reached</h4>
                    <p>Your project "<strong>DevConnect Platform</strong>" reached 50% completion</p>
                    <span class="notification-time">2 days ago</span>
                </div>
                <div class="notification-actions">
                    <button class="action-btn" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Read Notification -->
            <div class="notification-item" data-type="system">
                <div class="notification-icon" style="background: #28a745;">
                    <i class="fas fa-trophy"></i>
                </div>
                <div class="notification-content">
                    <h4>Achievement Unlocked</h4>
                    <p>You earned the "<strong>Top Contributor</strong>" badge for 100+ contributions</p>
                    <span class="notification-time">3 days ago</span>
                </div>
                <div class="notification-actions">
                    <button class="action-btn" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Read Notification -->
            <div class="notification-item" data-type="system">
                <div class="notification-icon" style="background: #fd7e14;">
                    <i class="fas fa-bell"></i>
                </div>
                <div class="notification-content">
                    <h4>System Update</h4>
                    <p>DevConnect has been updated with new features and improvements</p>
                    <span class="notification-time">1 week ago</span>
                </div>
                <div class="notification-actions">
                    <button class="action-btn" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Empty State -->
        <div class="empty-state" id="emptyState" style="display: none;">
            <i class="fas fa-inbox"></i>
            <h3>No notifications</h3>
            <p>You're all caught up!</p>
        </div>
    </div>
</div>

<!-- GSAP Animation Library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>

<script src="/js/notifications.js"></script>
<script>
// GSAP Animations
gsap.fromTo('.notifications-header',
    { opacity: 0, y: -30 },
    { opacity: 1, y: 0, duration: 0.6, ease: 'power3.out' }
);

gsap.fromTo('.notifications-filters',
    { opacity: 0, x: -30 },
    { opacity: 1, x: 0, duration: 0.5, delay: 0.2, ease: 'power2.out' }
);

gsap.fromTo('.notification-item',
    { opacity: 0, x: 30 },
    { opacity: 1, x: 0, duration: 0.4, stagger: 0.08, delay: 0.4, ease: 'power2.out' }
);
</script>
